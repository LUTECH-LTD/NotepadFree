<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:paddingBottom="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by"
        android:textStyle="bold"
        android:textColor="@color/color_black_medium"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/sortGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/radio_edit_date_newest"
            android:textSize="16sp"
            android:textColor="@color/color_black_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="edit date: from newest" />

        <RadioButton
            android:id="@+id/radio_edit_date_oldest"
            android:textSize="16sp"
            android:textColor="@color/color_black_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="edit date: from oldest" />

        <RadioButton
            android:id="@+id/radio_title_a_z"
            android:textSize="16sp"
            android:textColor="@color/color_black_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title: A-Z" />

        <RadioButton
            android:id="@+id/radio_title_z_a"
            android:textSize="16sp"
            android:textColor="@color/color_black_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title: Z-A" />

        <RadioButton
            android:id="@+id/radio_creation_date_newest"
            android:textSize="16sp"
            android:textColor="@color/color_black_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="creation date: from newest" />

        <RadioButton
            android:id="@+id/radio_creation_date_oldest"
            android:textSize="16sp"
            android:textColor="@color/color_black_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="creation date: from oldest" />

        <RadioButton
            android:id="@+id/radio_color"
            android:textSize="16sp"
            android:textColor="@color/color_black_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="color: in order as shown on color palette" />
    </RadioGroup>

</LinearLayout>